<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageDetails"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_menu_gallery" />
    
    <TextView
        android:id="@+id/hotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageDetails"
        android:layout_alignTop="@+id/imageDetails"
        android:layout_alignRight="@id/imageDetails"
        android:layout_alignBottom="@id/imageDetails"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/red"
        android:text="@string/title"/>

    <TextView
        android:id="@+id/punctuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageDetails"
        android:layout_alignTop="@+id/imageDetails"
        android:layout_alignRight="@id/imageDetails"
        android:layout_alignBottom="@id/imageDetails"
        android:paddingBottom="5dp"
        android:gravity="bottom|center"
        android:textSize="30sp"
        android:text="@string/puntuation"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/descriptionLabel"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:textColor="@color/lightBlue"
        android:text="@string/description"
        android:layout_below="@+id/imageDetails"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="match_parent"
        android:id="@+id/textDescription"
        android:textSize="14sp"
        android:layout_below="@+id/descriptionLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scrollbars = "vertical"/>

</RelativeLayout>